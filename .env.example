# =====================================================
# Denif E-Commerce - Production Environment Variables
# =====================================================

# -----------------
# AirTable Configuration
# -----------------
# Get your API key from https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key_here

# Get your Base ID from the AirTable API documentation
# https://airtable.com/developers/web/api/introduction
AIRTABLE_BASE_ID=your_base_id_here

# Products table name
AIRTABLE_TABLE_NAME=Prodotti

# Orders table name (create this in AirTable)
AIRTABLE_ORDERS_TABLE=Ordini

# -----------------
# Stripe Configuration
# -----------------
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test keys for development, live keys for production
PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# -----------------
# Resend Email Service
# -----------------
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Store email for sending notifications
STORE_EMAIL=info@denif.it

# -----------------
# Webhook Security
# -----------------
# Secret for verifying webhook requests (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# -----------------
# WhatsApp Integration (optional)
# -----------------
# Format: country code + number (no spaces, dashes, or +)
WHATSAPP_NUMBER=39XXXXXXXXXX
